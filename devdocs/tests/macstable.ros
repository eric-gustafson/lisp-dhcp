(defun simple-allocation ()
  (labels ((mreq (mac)
	     (make-instance 'dhcp-server:dhcp 
			    :op 1 
			    :htype 1
			    :hlen 6
			    :xid (random (expt 2 32))
			    :ciaddr #(0 0 0 0)
			    :chaddr mac)))
    (let* ((rlst (list (mreq #(1 2 3 4 5 6))
		      (mreq #(1 2 3 4 5 7))
		      (mreq #(1 2 3 4 5 6))))
	  (oobj (make-instance 'dhcp-server:dhcp-options
			       :mtype 1
			       :restof
			       `((:lease-time 300) )))
	   (results
	    (loop :for obj :in rlst do
	     (setf (dhcp-server:options obj) (dhcp-server:encode-dhcp-options oobj))
	     :collect
	     (dhcp-server:handle-dhcp-message obj)))
	   )
      (print results)
      (trivia:ematch
	  results
	((list x y z)
	 (let ((bcast-addr
		(coerce (numex:num->octets (cidr-bcast (dhcp-server:yiaddr x)
						       (dhcp-server:cidr-subnet dhcp-server:*this-net*)
						       )) 'vector)))
	   (print `(
		    :x ,x
		       :bcast-addr ,bcast-addr
		       :yiaddr ,(dhcp-server:yiaddr x)))
	   (prove:ok
	    (dhcp-server:ip=? bcast-addr
			      #(10 0 0 255)))
	   (prove:ok (dhcp-server:ip=? (dhcp-server:yiaddr x) #(10 0 0 2)))
	   (prove:ok (dhcp-server:ip=? (dhcp-server:yiaddr y) #(10 0 1 2)))
	   (prove:ok (dhcp-server:ip=? (dhcp-server:yiaddr z) #(10 0 0 2)))
	   )
	 ))

      ;;(ok (not (find 4 '(1 2 3))))
      ;;(is 4 4)
      ;;(isnt 1 #\1)
      )
    )
  )
  
